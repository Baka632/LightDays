                                   TextWrapping="Wrap" Margin="0,5,0,5"/>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>

                <PivotItem x:Uid="PivotHeader5">
                    <ScrollViewer>
                        <StackPanel>
                            <StackPanel>
                                
                            </StackPanel>
                            
                            <TextBlock x:Uid="LogBlock" FontSize="16" Margin="0,5,0,5" TextWrapping="Wrap"/>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <HyperlinkButton x:Uid="LogHyper1" FontSize="15" NavigateUri="https://www.dexstudio.cn/2018/01/10/lightdays-1-2-0-1-7-0-updatelog"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <HyperlinkButton x:Uid="LogHyper2" FontSize="15" NavigateUri="https://www.dexstudio.cn/2018/01/17/lightdays-1-8-0-updatelog"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <HyperlinkButton x:Uid="LogHyper3" FontSize="15" NavigateUri="https://www.dexstudio.cn/2018/01/21/lightdays-1-8-1-updatelog"/>
                                </StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
