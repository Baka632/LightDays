                                    </StackPanel>

                                    <Border Style="{StaticResource ItemSperator}"/>

                                    <StackPanel Margin="0,5,0,0">
                                        <ToggleSwitch x:Name="MottoSwitch" x:Uid="MottoSwitch" 
                                                      Toggled="MottoSwitch_Toggled"/>
                                    </StackPanel>
                                </StackPanel>
                            </controls:Expander>


                            <controls:Expander Name="OthersExpander"
